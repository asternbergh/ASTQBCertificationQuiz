<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--branding color for app bar -->
        <item name="colorPrimary">#3F51B5</item>
        <!--darker variant for status bar and contextual app  bars-->
        <item name="colorPrimaryDark">#1A237E</item>
        <!--theme UI controls like checkboxes and text fields-->
        <item name="colorAccent">#9FA8DA</item>
        <!--sets the button color-->
        <item name="colorButtonNormal">#3F51B5</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1A237E</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="QuestionTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RadioButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
